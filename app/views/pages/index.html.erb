<h1>Listing pages</h1>

<table>
  <tr>
    <th>Title</th>
    <th>Nav link</th>
    <th>Body</th>
    <th>Position</th>
  </tr>

<% @pages.each do |page| %>
  <tr>
    <td><%=h page.title %></td>
    <td><%=h page.nav_link %></td>
    <td><%=h page.body %></td>
    <td><%= link_to_remote "<", :url => move_page_up_url(page), :update => "admin_navigation_tabnav_content" unless page.highest? %><%= link_to_remote ">", :url => move_page_down_url(page), :update => "admin_navigation_tabnav_content" unless page.lowest? %>
    <td><%= show_link page %></td>
    <td><%= edit_link page %></td>
    <td><%= destroy_link(page) %></td>
  </tr>
<% end %>
</table>

<br />

<%= new_link :page %>
