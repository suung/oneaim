<h1>New page</h1>

<% form_remote_for(@page, :update => "admin_navigation_tabnav_content") do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label :nav_link %><br />
    <%= f.text_field :nav_link %>
  </p>
  <p>
    <%= f.label :body %><br />
    <%= f.text_area :body %>
  </p>

  <p>
    <%= f.submit 'Create' %>
  </p>
<% end %>

<%= index_link :pages %>
