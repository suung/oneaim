<h1>New project</h1>

<% form_remote_for(@project, :update => "admin_navigation_tabnav_content") do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :icon %><br />
    <%= f.text_field :icon %>
  </p>
  <p>
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label :description %><br />
    <%= f.text_area :description %>
  </p>
  <p>
    <%= f.label :url %><br />
    <%= f.text_field :url %>
  </p>
  <p>
    <%= f.label :is_open %><br />
    <%= f.check_box :is_open %>
  </p>
  <p>
    <%= f.submit 'Create' %>
  </p>
<% end %>

<%= index_link :projects %>
